{
  "name": "CookieJar",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "app.js"
      ]
    }
  ],
  "background" : {
    "service_worker" : "background.js"
  },
  "permissions": ["notifications", "cookies", "storage", "activeTab", "tabs"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
